<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="pl.piotrsukiennik.tuner.service">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
    </context:component-scan>

    <bean id="fitnessCalculator" class="pl.piotrsukiennik.tuner.ai.impl.FitnessCalculatorExpression">
        <constructor-arg value="1/sqrt(averageExecutionTime)"/>
    </bean>

    <bean class="pl.piotrsukiennik.tuner.ai.impl.DataSourceSelectorImpl">
        <constructor-arg>
            <bean class="pl.piotrsukiennik.tuner.util.GenericBuilderImpl">
                <constructor-arg value="pl.piotrsukiennik.ai.selectionhelper.impl.RouletteWheelSelection"/>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="pl.piotrsukiennik.tuner.ai.impl.FitnessCalculatorExpression">
                <constructor-arg value="1/sqrt(averageExecutionTime)"/>
            </bean>
        </constructor-arg>
    </bean>

</beans>
